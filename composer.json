{
  "name": "aaronheath/oauth-client",
  "description": "A simple oauth2 client for use in my applications.",
  "license": "MIT",
  "keywords": ["laravel", "oauth2"],
  "authors": [
    {
      "name": "Aaron Heath",
      "email": "aaron@aaronheath.com",
      "homepage": "https://aaronheath.com"
    }
  ],
  "require": {
    "php": "^8.2.0",
    "illuminate/support": "~10.0.0",
    "ext-json": "*",
    "aaronheath/class-logger": "^1.2.0",
    "guzzlehttp/guzzle": "^7.8"
  },
  "autoload": {
    "psr-4": {
      "Heath\\OauthClient\\": "src/"
    }
  },
  "require-dev": {
    "mockery/mockery": "^1.0.0",
    "phpunit/phpunit": "~10.0",
    "orchestra/testbench": "^8.0.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/aaronheath/class-logger"
    }
  ],

  "minimum-stability": "stable",
  "extra": {
    "laravel": {
      "providers": [
        "Heath\\OauthClient\\OauthClientServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "kylekatarnls/update-helper": true
    }
  }
}
